# ============================================================================
# ORDER SERVICE ENVIRONMENT VARIABLES
# ============================================================================

# Application
NODE_ENV=development
PORT=3005

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/order_db

# JWT (for token verification)
# Minimum 32 characters required
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-in-production

# External Service URLs
CART_SERVICE_URL=http://localhost:3004
PRODUCT_SERVICE_URL=http://localhost:3003
USER_SERVICE_URL=http://localhost:3002

# Redis (optional - falls back to in-memory cache if not provided)
REDIS_URL=redis://localhost:6379

# Order Configuration
ORDER_NUMBER_PREFIX=ORD
MAX_ORDER_ITEMS=100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Request Configuration
REQUEST_TIMEOUT_MS=30000
SHUTDOWN_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10

# CORS
# Comma-separated list of allowed origins (leave empty for development)
ALLOWED_ORIGINS=

# Logging
LOG_LEVEL=info

# Event Publishing (OCI Streaming)
EVENT_PUBLISHER_TYPE=mock
OCI_COMPARTMENT_ID=
OCI_STREAM_ID=
OCI_REGION=us-ashburn-1

# Event Consumer (OCI Queue) - Optional
EVENT_CONSUMER_TYPE=mock
OCI_QUEUE_ID=

