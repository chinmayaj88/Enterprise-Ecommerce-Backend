# ============================================================================
# RETURN SERVICE ENVIRONMENT VARIABLES
# ============================================================================

# Application
NODE_ENV=development
PORT=3010
REQUEST_TIMEOUT_MS=30000
SHUTDOWN_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10

# Database
DATABASE_URL="postgresql://return_user:return_pass@localhost:5432/return_db"
POSTGRES_USER=return_user
POSTGRES_PASSWORD=return_pass
POSTGRES_DB=return_db
POSTGRES_PORT=5432

# Redis (optional, for caching)
REDIS_URL="redis://localhost:6379"
REDIS_CACHE_TTL=3600 # in seconds
REDIS_PORT=6379

# JWT (for token verification with auth-service)
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100 # max requests per windowMs per IP

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info # debug, info, warn, error

# External Services
ORDER_SERVICE_URL=http://localhost:3004
ORDER_SERVICE_API_KEY=
ORDER_SERVICE_INTERNAL_TOKEN=
PAYMENT_SERVICE_URL=http://localhost:3005
PAYMENT_SERVICE_API_KEY=
PAYMENT_SERVICE_INTERNAL_TOKEN=

# OCI Events (for production/staging)
EVENT_PUBLISHER_TYPE=mock # mock, oci-streaming
EVENT_CONSUMER_TYPE=mock # mock, oci-queue
OCI_COMPARTMENT_ID=
OCI_STREAM_ID=
OCI_QUEUE_ID=
OCI_REGION=IN-HYDERABAD-1
