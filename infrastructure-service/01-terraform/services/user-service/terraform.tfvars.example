# ============================================================================
# USER-SERVICE TERRAFORM.TFVARS.EXAMPLE
# ============================================================================
# Copy this to terraform.tfvars and fill in values from foundation outputs
# ============================================================================

# Foundation References (get from: cd ../foundation && terraform output)
compartment_id       = "ocid1.compartment.oc1..aaaaaaa..."  # From foundation output
cluster_id           = "ocid1.cluster.oc1..aaaaaaa..."       # From foundation output
private_subnet_id    = "ocid1.subnet.oc1..aaaaaaa..."       # From foundation output
vault_id             = "ocid1.vault.oc1..aaaaaaa..."       # From foundation output (shared vault)
vault_master_key_id  = "ocid1.key.oc1..aaaaaaa..."         # From foundation output (shared master key)
oci_region           = "ap-mumbai-1"                       # Same as foundation

# Project Information
project_name = "ecommerce"
environment  = "production"
service_name = "user-service"

# Kubernetes Configuration
namespace       = "user-service"
service_replicas = 2

# Secrets
# Database URL format: postgresql://username:password@host:port/database
database_url = "postgresql://user:password@host:5432/user_db"
auth_service_url = "http://auth-service:3001"

# Tags
tags = {
  Project     = "ecommerce"
  ManagedBy   = "terraform"
  Service     = "user-service"
  Environment = "production"
}

