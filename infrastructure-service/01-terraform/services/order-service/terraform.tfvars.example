# ============================================================================
# ORDER-SERVICE TERRAFORM VARIABLES - Example Configuration
# ============================================================================
# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to version control!
# ============================================================================

# Foundation References (get from foundation outputs)
compartment_id      = "ocid1.compartment.oc1..xxxxx"
cluster_id          = "ocid1.cluster.oc1.xxxxx"
private_subnet_id   = "ocid1.subnet.oc1.xxxxx"
vault_id            = "ocid1.vault.oc1.xxxxx"
vault_master_key_id = "ocid1.key.oc1.xxxxx"
oci_region          = "us-ashburn-1"
oci_tenancy_ocid    = "ocid1.tenancy.oc1..xxxxx"
cluster_endpoint    = "https://xxxxx.xxxxx.xxxxx.oraclecloud.com:6443"

# Project Information
project_name = "ecommerce"
environment  = "production"
service_name = "order-service"

# Kubernetes Configuration
namespace       = "order-service"
service_replicas = 2

# Secrets (sensitive - use strong values in production)
# Generate database URL: postgresql://user:password@host:port/database
database_url = "postgresql://order_user:STRONG_PASSWORD@order-db-host:5432/order_db"

# Generate Redis URL: redis://user:password@host:port
redis_url = "redis://order-redis-host:6379"

# Service URLs (internal Kubernetes service names)
cart_service_url    = "http://cart-service:3004"
product_service_url = "http://product-service:3003"
user_service_url     = "http://user-service:3002"
auth_service_url     = "http://auth-service:3001"

# Tags
tags = {
  Project     = "ecommerce"
  ManagedBy   = "terraform"
  Service     = "order-service"
  Environment = "production"
}

