# ============================================================================
# GATEWAY SERVICE ENVIRONMENT VARIABLES
# ============================================================================

# Application
NODE_ENV=development
PORT=3000
REQUEST_TIMEOUT_MS=30000
SHUTDOWN_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10
PROXY_TIMEOUT_MS=25000

# JWT (for token verification)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100 # max requests per windowMs per IP
RATE_LIMIT_AUTH_MAX_REQUESTS=5 # max auth requests per 15 minutes

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info # debug, info, warn, error

# Redis (optional, for distributed rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# Backend Service URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
PRODUCT_SERVICE_URL=http://localhost:3003
CART_SERVICE_URL=http://localhost:3006
ORDER_SERVICE_URL=http://localhost:3007
PAYMENT_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3009
DISCOUNT_SERVICE_URL=http://localhost:3008
SHIPPING_SERVICE_URL=http://localhost:3007
RETURN_SERVICE_URL=http://localhost:3010
