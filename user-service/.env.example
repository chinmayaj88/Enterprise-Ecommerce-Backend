# Application Configuration
NODE_ENV=development
PORT=3002

# Database Configuration
DATABASE_URL=postgresql://user-service_user:user-service_pass@localhost:5432/user-service_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-in-production

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# External Services
AUTH_SERVICE_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Request Configuration
REQUEST_TIMEOUT_MS=30000
SHUTDOWN_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10

# OCI Event Configuration (optional)
OCI_COMPARTMENT_ID=
OCI_STREAM_ID=
OCI_QUEUE_ID=
OCI_REGION=us-ashburn-1
EVENT_CONSUMER_TYPE=mock
EVENT_PUBLISHER_TYPE=mock

# Database Credentials (for docker-compose)
POSTGRES_USER=user-service_user
POSTGRES_PASSWORD=user-service_pass
POSTGRES_DB=user-service_db
POSTGRES_PORT=5432

# Redis Port (for docker-compose)
REDIS_PORT=6379