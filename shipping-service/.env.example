# ============================================================================
# SHIPPING SERVICE ENVIRONMENT VARIABLES
# ============================================================================

# Server Configuration
NODE_ENV=development
PORT=3009
REQUEST_TIMEOUT_MS=30000
SHUTDOWN_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ecommerce_shipping_db

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production-minimum-32-characters-long

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# External Services
ORDER_SERVICE_URL=http://localhost:3004
ORDER_SERVICE_API_KEY=
ORDER_SERVICE_INTERNAL_TOKEN=

PRODUCT_SERVICE_URL=http://localhost:3003
PRODUCT_SERVICE_API_KEY=
PRODUCT_SERVICE_INTERNAL_TOKEN=

# Event System (OCI Queue/Streaming)
EVENT_PUBLISHER_TYPE=mock
EVENT_CONSUMER_TYPE=mock
OCI_COMPARTMENT_ID=
OCI_STREAM_ID=
OCI_QUEUE_ID=
OCI_REGION=IN-HYDERABAD-1

# OCI Authentication (uses default config file at ~/.oci/config)
# OCI_CONFIG_FILE=~/.oci/config
# OCI_CONFIG_PROFILE=DEFAULT
