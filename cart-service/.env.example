# ============================================================================
# CART SERVICE ENVIRONMENT VARIABLES
# ============================================================================

# Application
NODE_ENV=development
PORT=3004

# Database
DATABASE_URL=postgresql://cart_user:cart_pass@localhost:5432/cart_db

# JWT (for token verification)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-in-production

# Product Service (for product validation)
PRODUCT_SERVICE_URL=http://localhost:3003

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Cart Configuration
CART_EXPIRATION_DAYS=30
MAX_CART_ITEMS=100
MAX_ITEM_QUANTITY=99

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Request Configuration
REQUEST_TIMEOUT_MS=30000
SHUTDOWN_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info

# Log Directory (for production file logging)
# LOG_DIR=/var/log/cart-service
