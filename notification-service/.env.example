# Server Configuration
NODE_ENV=development
PORT=3007
REQUEST_TIMEOUT_MS=30000
SHUTDOWN_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/notification_db

# JWT (Shared secret with auth-service for token verification)
JWT_SECRET=your-jwt-secret-key-minimum-32-characters-long

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
USER_SERVICE_API_KEY=optional-api-key-for-user-service
USER_SERVICE_INTERNAL_TOKEN=optional-internal-token-for-user-service
FRONTEND_URL=http://localhost:3000

# Redis (Optional, for rate limiting and caching)
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# Email Provider Configuration
EMAIL_PROVIDER=mock
# Options: mock, sendgrid, nodemailer, oci-email

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# SMTP Configuration (if EMAIL_PROVIDER=nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@ecommerce.com
SMTP_FROM_NAME=E-Commerce Platform

# OCI Email Configuration (if EMAIL_PROVIDER=oci-email)
OCI_EMAIL_SENDER_ID=ocid1.emailsender.oc1..xxxxx
OCI_EMAIL_REGION=us-ashburn-1

# SMS Provider Configuration
SMS_PROVIDER=mock
# Options: mock, twilio

# Twilio Configuration (if SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Future)
PUSH_PROVIDER=mock
# Options: mock, fcm, apns

# FCM Configuration (if PUSH_PROVIDER=fcm)
FCM_SERVER_KEY=your-fcm-server-key

# APNS Configuration (if PUSH_PROVIDER=apns)
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=your-app-bundle-id
APNS_PRIVATE_KEY=your-apns-private-key

# OCI/Event Publishing Configuration
OCI_COMPARTMENT_ID=ocid1.compartment.oc1..xxxxx
OCI_STREAM_ID=ocid1.stream.oc1..xxxxx
OCI_QUEUE_ID=ocid1.queue.oc1..xxxxx
OCI_REGION=IN-HYDERABAD-1
EVENT_PUBLISHER_TYPE=mock
# Options: mock, oci-streaming
EVENT_CONSUMER_TYPE=mock
# Options: mock, oci-queue

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug
LOG_DIR=/var/log/notification-service

# Notification Settings
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY_MS=1000
MAX_NOTIFICATIONS_PER_BATCH=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001