ORDER_SERVICE_URL=http://localhost:3004
ORDER_SERVICE_API_KEY=
ORDER_SERVICE_INTERNAL_TOKEN=

PRODUCT_SERVICE_URL=http://localhost:3003
PRODUCT_SERVICE_API_KEY=
PRODUCT_SERVICE_INTERNAL_TOKEN=

# OCI Configuration (Optional - for event publishing/consuming)
OCI_QUEUE_ID=
OCI_COMPARTMENT_ID=
OCI_REGION=us-ashburn-1
OCI_STREAM_ID=
EVENT_CONSUMER_TYPE=mock

# Cache Configuration
MAX_SEARCH_RESULTS=100
