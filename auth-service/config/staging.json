{
  "server": {
    "port": 3001,
    "env": "development",
    "requestTimeout": 30000,
    "shutdownTimeout": 30000,
    "maxRequestSize": "10mb"
  },
  "database": {
    "url": "postgresql://user:password@localhost:5432/auth_db"
  },
  "jwt": {
    "secret": "your-secret-key-change-in-production-min-32-chars",
    "refreshSecret": "your-refresh-secret-key-change-in-production-min-32-chars",
    "accessTokenExpiresIn": "15m",
    "refreshTokenExpiresIn": "7d"
  },
  "redis": {
    "url": "redis://localhost:6379"
  },
  "auth": {
    "maxLoginAttempts": 5,
    "lockoutDurationMinutes": 30,
    "cookieSecret": "your-cookie-secret-change-in-production",
    "cookieDomain": "",
    "cookieSecure": false
  },
  "rateLimit": {
    "windowMs": 900000,
    "maxRequests": 100
  },
  "cors": {
    "allowedOrigins": []
  },
  "logging": {
    "level": "info"
  }
}
