# ============================================================================
# PRODUCT SERVICE ENVIRONMENT VARIABLES
# ============================================================================

# Application
NODE_ENV=development
PORT=3003

# Database
DATABASE_URL=postgresql://product_user:product_pass@localhost:5432/product_db

# JWT (for token verification)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Product Configuration
MAX_SEARCH_RESULTS=100
PRODUCT_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Request Configuration
REQUEST_TIMEOUT_MS=30000
SHUTDOWN_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10

# CORS
# Comma-separated list of allowed origins, e.g., http://localhost:3000,https://yourdomain.com
# In development, you can use "*" for all origins.
ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=info

# Event Publishing (optional)
EVENT_PUBLISHER_TYPE=mock
OCI_STREAM_ID=
OCI_COMPARTMENT_ID=
OCI_REGION=
